{
  "name": "Hlídač Shopů",
  "version": "0.2.0",
  "description": "Rozšíření zobrazuje historická data pro největší české eshopy",
  "manifest_version": 2,
  "icons": {
    "256": "icons/icon-hlidac-256.png",
    "128": "icons/icon-hlidac-128.png",
    "64": "icons/icon-hlidac-64.png",
    "32": "icons/icon-hlidac-32.png",
    "16": "icons/icon-hlidac-16.png"
  },
  "browser_action": {
    "default_icon": {
      "256": "icons/icon-hlidac-256.png",
      "128": "icons/icon-hlidac-128.png",
      "64": "icons/icon-hlidac-64.png",
      "32": "icons/icon-hlidac-32.png",
      "16": "icons/icon-hlidac-16.png"
    },
    "default_title": "Hlídač Shopů",
    "default_popup": "about.html"
  },
  "permissions": [
    "https://tok179mvhf.execute-api.eu-central-1.amazonaws.com/default/fetchData"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.alza.cz/*"],
      "js": [
        "main.bundle.js",
        "alza.js"
      ]
    },
    {
      "matches": ["https://www.mall.cz/*"],
      "js": [
        "main.bundle.js",
        "mall.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.czc.cz/*"],
      "js": [
        "main.bundle.js",
        "czc.js"
      ]
    }
  ]
}
