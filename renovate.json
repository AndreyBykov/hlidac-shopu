{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekdays",
    "npm:unpublishSafe",
    "group:aws-sdk-js-v3Monorepo",
    "group:postcss",
    "group:linters",
    ":dependencyDashboard"
  ],
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "rebase",
  "packageRules": [
    {
      "groupName": "pulumi",
      "matchPackagePrefixes": ["@pulumi/"]
    }
  ]
}
