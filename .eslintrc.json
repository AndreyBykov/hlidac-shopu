{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": [
    "es",
    "lit",
    "prettier",
    "promise"
  ],
  "extends": [
    "prettier",
    "plugin:lit/recommended",
    "plugin:promise/recommended"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  }
}
